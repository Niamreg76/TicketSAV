@model testyoutube.Data.Tickets
@using Microsoft.AspNetCore.Identity
@using testyoutube.Areas.Identity.Data
@inject SignInManager<aspnetusers> SignInManager
@{
    ViewData["Title"] = "Détails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex">
        <h1 class="text-white">Détails&nbsp;</h1>
        <svg style="max-width: 40px;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m5.231 13.481L15 17.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v16.5c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9zm3.75 11.625a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
        </svg>
    </div>

    <div class="neumorphism">
        <h4>Ticket</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ID_utilisateur)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ID_utilisateur)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date_creation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date_creation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date_modif)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date_modif)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Statut)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Statut.ID_statut)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Panne)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Panne.ID_panne)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ID_ticket">Modifier</a> |
            <a asp-controller="Home" asp-action="Index">Retour à la liste</a>
        </div>
    </div>

}
else
{
    <div class="text-center text-white">
        <h1 class="display-4">Support Ticket</h1>
        <p>Connectez-vous ou inscrivez-vous en haut de la page</p>
    </div>
}

