@model testyoutube.Data.Tickets


@{
    ViewData["Title"] = "Supprimer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Supprimer</h1>


<div class="neumorphism">
    <h3 class="text-danger">Voulez-vous vraiment supprimer ce ticket?</h3>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID_utilisateur)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_utilisateur)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_creation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_creation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_modif)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_modif)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Statut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Statut.ID_statut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.panne)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.panne.ID_panne)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_ticket" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
